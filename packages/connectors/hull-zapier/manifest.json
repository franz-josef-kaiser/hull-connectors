{
  "name": "Zapier",
  "description": "Zapier Connector",
  "tags": [
    "batch",
    "batch-accounts",
    "smart-notifier",
    "kraken-exports"
  ],
  "logo": "logo.png",
  "picture": "picture.png",
  "ui": false,
  "readme": "readme.md",
  "version": "0.3.0",
  "private_settings": [
    {
      "name": "subscriptions",
      "title": "Rest Hook Subscripitons",
      "type": "array",
      "format": "hidden",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          },
          "action": {
            "type": "string"
          },
          "entityType": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      },
      "default": []
    },
    {
      "name": "synchronized_user_segments",
      "title": "User Filter",
      "description": "Which users are sent to Zapier",
      "type": "array",
      "format": "segment",
      "options": {
        "standard": {
          "ALL": "All Users"
        }
      },
      "default": [
        "ALL"
      ]
    },
    {
      "name": "synchronized_account_segments",
      "title": "Account Filter",
      "description": "Which accounts are sent to Zapier",
      "type": "array",
      "format": "accountSegment",
      "options": {
        "standard": {
          "ALL": "All Accounts"
        }
      },
      "default": [
        "ALL"
      ]
    },
    {
      "name": "synchronized_events",
      "title": "User Filter",
      "description": "Which Events are sent to Zapier",
      "type": "array",
      "format": "event",
      "options": {}
    }
  ],
  "resources": [],
  "settings_sections": [
    {
      "title": "Credentials",
      "description": "Copy this token and paste it when in the Zapier authentication window",
      "step": "credentials",
      "properties": [
        "json.credentials"
      ]
    },
    {
      "title": "Configuration",
      "description": "Configure what Hull will send to the Zapier connector - this happens before the Zapier connector receives data: If a user, account or event is filtered here, Zapier won't receive it at all, even if it has no filters set on it's side",
      "properties": [
        "private_settings.synchronized_user_segments",
        "private_settings.synchronized_account_segments",
        "private_settings.events"
      ]
    }
  ],
  "json": [
    {
      "url": "/auth",
      "handler": "authHandler"
    },
    {
      "url": "/create",
      "handler": "createHandler",
      "options": {
        "respondWithError": true
      }
    },
    {
      "url": "/subscribe",
      "handler": "subscribeHandler",
      "options": {}
    },
    {
      "url": "/unsubscribe",
      "handler": "unsubscribeHandler",
      "options": {}
    },
    {
      "url": "/credentials",
      "name": "credentials",
      "format": "credentials",
      "title": "Credentials",
      "description": "The Token to pass to Zapier",
      "type": "string",
      "handler": "credentialsHandler"
    },
    {
      "url": "/search",
      "handler": "searchHandler",
      "options": {
        "respondWithError": true
      }
    },
    {
      "url": "/schema",
      "handler": "schemaHandler",
      "options": {
        "respondWithError": true
      }
    },
    {
      "url": "/segments",
      "handler": "segmentsHandler",
      "options": {
        "respondWithError": true
      }
    }
  ],
  "subscriptions": [
    {
      "url": "/smart-notifier",
      "conditions": {
        "channels": {
          "only": [
            "user:update",
            "ship:update",
            "account:update"
          ]
        },
        "segments": {
          "user:update": "private_settings.synchronized_user_segments",
          "account:update": "private_settings.synchronized_account_segments"
        }
      },
      "channels": [
        {
          "channel": "user:update",
          "handler": "userUpdate"
        },
        {
          "channel": "account:update",
          "handler": "accountUpdate"
        }
      ]
    }
  ],
  "status": {
    "initial_value": "ok",
    "url": "/status",
    "type": "cron",
    "value": "*/30 * * * *",
    "handler": "statusHandler"
  },
  "statuses": [
    {
      "initial_value": "ok",
      "url": "/status",
      "type": "cron",
      "value": "*/30 * * * *",
      "handler": "statusHandler"
    }
  ]
}
